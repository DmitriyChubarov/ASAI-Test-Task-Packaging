<odoo>
    <record id="view_packing_detail_tree" model="ir.ui.view">
        <field name="name">packing.detail.tree</field>
        <field name="model">packing.detail</field>
        <field name="arch" type="xml">
            <list string="Packing Details">
                <field name="name"/>
                <field name="code"/>
                <field name="weight"/>

            </list>
        </field>
    </record>

    <record id="view_packing_detail_form" model="ir.ui.view">
        <field name="name">packing.detail.form</field>
        <field name="model">packing.detail</field>
        <field name="arch" type="xml">
            <form string="Packing Detail">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="weight"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
